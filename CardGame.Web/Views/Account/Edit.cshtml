@model CardGame.DAL.Model.User

@{
    ViewBag.Title = "Edit";
}

<div class="editaccountbackground">
    <h2 class="editaccountHeader">Account bearbeiten</h2>
    <div class="editaccountbody">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, "Vorname", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.FirstName)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, "Nachname", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.LastName)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Mail, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.Mail)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.GamerTag, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.ValueFor(model => model.GamerTag)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.ValueFor(model => model.Password)

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Street, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.Street)

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Streetnumber, "Hausnummer", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.Streetnumber)

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Post_Code, "PLZ", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.Post_Code)

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.City, "Stadt")

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Ändern" class="btn btn-default" />
                        </div>
                    </div>
                </div>
               
            </div>
        }
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
