@model CardGame.Web.Models.EditUserModel

@{
    ViewBag.Title = "EditUser";
}

<div class="editaccountbackground">
    <h2 class="editaccountHeader">Account Übersicht</h2>
    <div class="editaccountbody">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizental" style="margin-left:345px; margin-top:30px;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.ValueFor(model => model.Firstname)
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Lastname, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.ValueFor(model => model.Lastname)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Gamertag, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.ValueFor(model => model.Gamertag)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Street, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.ValueFor(model => model.Street)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Streetnumber, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.ValueFor(model => model.Streetnumber)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.PLZ, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.ValueFor(model => model.PLZ)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.ValueFor(model => model.City)
                    </div>
                </div>

                @Html.ActionLink("Passwort ändern", "ChangePassword", "Account", null, new { @class = "PasswortÄndernLink" })
                
                <div class="form-group">
                    <div class="col-md-12">
                        @Html.ActionLink("Bearbeiten", "EditUser", "Account", new { @class = "btn btn-submit"})
                    </div>
                </div>
            </div>

        }
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
